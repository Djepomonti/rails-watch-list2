<h1>Vos listes de film</h1>
<% if @lists.count == 0 %>
    <p>Vous n'avez pas de liste pour le moment.</p>
  <% end %>
 <% @lists.each do |list| %>
        <%= link_to list_path(list) do%>
          <div
            <% if list.photo.attached? %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
              url(<%= cl_image_path list.photo.key %>)">
              <%= list.name %>
            <% else %>
              <%= list.name %>
              <%= image_tag 'movie.jpeg' %>
            <% end %>
          </div>
        <% end %>
      <% end %>
<%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
